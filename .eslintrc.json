{
    "env": {
      "node": true,
      "browser": true,
      "commonjs": true,
      "mocha": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "16.7.0"
      }
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "react"
    ],
    "rules": {
      "prettier/prettier": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "error"
          ]
        }
      ],
      "eol-last": 2,
      "block-spacing": "error",
      "func-call-spacing": 2,
      "no-trailing-spaces": "error",
      "no-var": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "comma-dangle": "error",
      "react/prop-types": 0,
      "no-unused-vars": [
        2,
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "exceptions": [
            "-",
            "+"
          ]
        }
      ],
      "strict": "error"
    }
  }
  